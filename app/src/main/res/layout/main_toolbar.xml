<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main_toolbar"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <ImageView
        android:id="@+id/main_button_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:src="@drawable/button_menu"
        app:tint="@color/white"
        android:onClick="main_setting"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="암기빵"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/main_button_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="edit"
        android:textColor="@color/white"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:textSize="18sp"
        android:onClick="main_onClickEdit"/>

    <TextView
        android:id="@+id/main_button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제"
        android:textColor="@color/white"
        android:layout_gravity="right"
        android:layout_marginRight="8dp"
        android:textSize="18sp"
        android:onClick="main_onClickDelete"
        android:visibility="invisible"/>

    <CheckBox
        android:id="@+id/main_button_selectAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체"
        android:textColor="@color/white"
        android:layout_gravity="right"
        android:layout_marginRight="8dp"
        android:textSize="18sp"
        android:onClick="main_onClickSelectAll"
        android:visibility="invisible"/>


</androidx.appcompat.widget.Toolbar>