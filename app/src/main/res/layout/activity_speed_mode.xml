<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SpeedModeActivity">

    <include
        layout="@layout/mode_toolbar"
        android:id="@+id/mode_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/speed_mode_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/x_mark"
                android:layout_gravity="center"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/speed_mode_o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/o_mark"
                android:layout_gravity="center"
                android:visibility="invisible"/>

        </FrameLayout>

        <TextView
            android:id="@+id/speed_mode_word"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="word"
            android:textColor="?attr/Black"
            android:textSize="35sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/speed_mode_button_sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="3s"
            android:textSize="18sp"
            android:textColor="?attr/Black"
            android:background="@drawable/speed_mode_background_button_time"
            android:onClick="onButtonClick"/>

    </LinearLayout>

</LinearLayout>